<h1>This is a NEW user form</h1>
<%= form_for @user do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.submit "Create" %>
<% end %>

<%# nice use of this thing...%>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
